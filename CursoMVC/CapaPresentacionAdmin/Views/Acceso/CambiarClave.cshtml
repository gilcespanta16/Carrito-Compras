
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>CambiarClave</title>
    <link href="~/Content/Site.css" rel="stylesheet" />
    <style>
        /* Otros estilos pueden ir aquí */

        footer {
            position: fixed;
            bottom: 0;
            width: 100%;
            background-color: #f8f9fa; /* Fondo de color claro */
            padding: 15px; /* Espaciado interno */
        }
    </style>

</head>
<body style="background:black">
    <div id="layoutAuthentication">
        <div id="layoutAuthentication_content">
            <main>
                <div class="container">
                    <div class="row justify-content-center">
                        @*<div class="col-lg-7">*@
                            <div class="col-lg-7" style="box-shadow: 0 0 20px rgb(0, 38, 255); margin-top:10px">

                                <div >
                                    <div class="card-header">
                                        <h3 class="text-center font-weight-light my-4" style="color:white">Cambiar Contraseña</h3>
                                    </div>
                                    <div class="card-body">
                                        <form action="@Url.Action("CambiarClave", "Acceso")" method="post">

                                            <input class="form-control" type="hidden" value="@TempData["idUsuario"] " name="idusuario" />


                                            <div class="row mb-3">
                                                <div class="col-md-12">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input class="form-control" id="claveactual" type="password" name="claveactual" value="@ViewData["vclave"]" ; />
                                                        <label for="inputPassword">Contraseña Actual</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-md-12">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input class="form-control" id="nuevaclave" type="password" name="nuevaclave" />
                                                        <label for="inputPassword">Nueva Contraseña</label>
                                                    </div>
                                                </div>
                                            </div>

                                            <div class="row mb-3">
                                                <div class="col-md-12">
                                                    <div class="form-floating mb-3 mb-md-0">
                                                        <input class="form-control" id="confirmarclave" type="password" name="confirmarclave" />
                                                        <label for="inputPassword">Confirmar Nueva Contraseña</label>
                                                    </div>
                                                </div>
                                            </div>

                                            @{
                                            if (ViewBag.Error != null)
                                            {
                                        <div class="row mb-3">
                                            <div class="col-md-12">
                                                <div class="alert alert-danger" role="alert">
                                                    @ViewBag.Error
                                                </div>
                                            </div>
                                        </div>
                                            }
                                            }
                                            <div class="mt-4 mb-0">
                                                <div class="d-grid">
                                                <button class="btn btn-primary btn-block" type="submit" onclick="cambiarContrasena()">Cambiar Contraseña</button>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small"><a href="@Url.Action("Index","Acceso")">Volver</a></div>
                                    </div>
                                </div>
                            </div>
                    </div>
                </div>
            </main>
        </div>
        <div id="layoutAuthentication_footer">

            <footer class="py-4 bg-light mt-auto">
                <div class="container-fluid px-4">
                    <div class="d-flex align-items-center justify-content-between small">
                        <div class="text-muted">SISTEMAS &copy; Carrito de Compras 2024</div>
                        <div>
                            <a href="#">Política de Privacidad</a>
                            &middot;
                            <a href="#">Términos &amp; Condiciones</a>
                        </div>
                    </div>
                </div>
            </footer>
        </div>


    </div>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
    function cambiarContrasena() {
        // Coloca aquí tu lógica para realizar el cambio de contraseña

        // Después del cambio exitoso, muestra el mensaje usando Swal.fire
        Swal.fire({
            icon: 'success',
            title: 'Cambio de Contraseña Exitoso',
            text: 'Debe iniciar sesión con sus nuevas credenciales.',
            showConfirmButton: false,
            timer: 3000 // Muestra el mensaje durante 3 segundos antes de cerrarse automáticamente
        });
    }
    </script>

</body>
</html>
